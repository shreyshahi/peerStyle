% \author, \title are defined in report; here are the rest of the
% front matter defining macros
\def\deptA#1{\gdef\@deptA{#1}}
\def\deptB#1{\gdef\@deptB{#1}}
\def\institutionA#1{\gdef\@institutionA{#1}}
\def\institutionB#1{\gdef\@institutionB{#1}}
\def\authorA#1{\gdef\@authorA{#1}}
\def\authorB#1{\gdef\@authorB{#1}}
\def\reportnumber#1{\gdef\@reportnumber{#1}}

\def\submitdate#1{\gdef\@submitdate{#1}}

\def\@title{}\def\@author{}\def\@dept{computer science}

\def\@submitdate{\ifcase\the\month\or
  January\or February\or March\or April\or May\or June\or
  July\or August\or September\or October\or November\or December\fi
  \space \number\the\year}



\def\titlep{%
        \thispagestyle{empty}%
        \null\vskip1in%
        \begin{center}
                \sf\LARGE{\textbf{\@title}}
        \end{center}

        \vfill
        \begin{center}
              \begin{large}
                \sf \textbf{\@authorA}\\
                \@deptA\\
                \@institutionA\\
                \vspace{10pt}
                \textbf{\@authorB}\\
                \@deptB\\
                \@institutionB\
             \end{large}
        \end{center}

        \vfill
        \begin{center}
                \sf PEER Report \@reportnumber\\
                Pacific Earthquake Engineering Research Center\\
                Headquarters at the University of California, Berkeley\\
                \@submitdate\\
        \end{center}\vskip.5in\newpage}
        
        
\def\beforepreface{
        \pagenumbering{roman}
        \pagestyle{plain}
        \titlep
        \cleardoublepage}
        

\def\prefacesection#1{%
        \chapter*{\hfill \uppercase{#1} \hfill}
        \addcontentsline{toc}{chapter}{\uppercase{#1}}}


\def\afterpreface{\newpage
        \tableofcontents
                \listoftables
                \listoffigures
        \cleardoublepage
        \pagenumbering{arabic}
        \pagestyle{plain}}

% Redefine \thebibliography to go to a new page and put an entry in the
% table of contents
\renewcommand{\bibname}{References}
\let\@ldthebibliography\thebibliography
\renewcommand{\thebibliography}[1]{\newpage
                \@ldthebibliography{#1}%
\addcontentsline{toc}{chapter}{\bibname}}

% redefine \@endpart so the blank page after part has a page number
\def\@endpart{\vfil\newpage
                \null
                \thispagestyle{plain}%
                \newpage
              \if@tempswa
                \twocolumn
              \fi}


